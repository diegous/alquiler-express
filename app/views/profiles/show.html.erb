<main class="max-w-4xl mx-auto px-6 py-10">
  <div class="bg-white rounded-2xl p-8 space-y-5 shadow-xl ">

    <%= link_to :back do %>
      <button class="inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors shadow h-9 py-2 bg-[#FF6C1E] text-white rounded-2xl px-4 hover:bg-orange-600 my-3">
        <svg stroke="currentColor" fill="currentColor" stroke-width="0" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
          <path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
        </svg>
      </button>
    <% end %>

    <h2 class="text-2xl font-semibold text-[#144B7F] mb-4">Mi perfil</h2>

    <div class="grid grid-cols-1 gap-5">
      <div>
        <p><strong>Apellido</strong></p>
        <p class="text-[#666]"><%= @user.last_name %></p>

        <p class="mt-4"><strong>Nombre</strong></h3>
        <p class="text-[#666]"><%= @user.first_name %></p>

        <p class="mt-4"><strong>Teléfono</strong></h3>
        <p class="text-[#666]"><%= @user.phone %></p>

        <% if @user.customer? %>
          <p class="mt-4"><strong>Fecha de nacimiento</strong></h3>
          <p class="text-[#666]"><%=l @user.dob, format: :long %></p>

          <p class="mt-4"><strong>Género</strong></h3>
          <p class="text-[#666]"><%= t(@user.gender).titleize %></p>
        <% end %>

        <p class="mt-4"><strong>Email</strong></h3>
        <p class="text-[#666]"><%= @user.email_address %></p>

        <%= link_to "Editar Perfil", edit_profile_path, class: "inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 [&amp;_svg]:size-4 shadow h-10 py-2 bg-[#FF6C1E] text-white rounded-xl px-6 hover:bg-orange-600 mt-6" %>

        <%= link_to "Editar Contraseña", edit_profile_password_path, class: "inline-flex items-center justify-center gap-2 text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 [&amp;_svg]:size-4 shadow h-10 py-2 bg-[#FF6C1E] text-white rounded-xl px-6 hover:bg-orange-600 mt-6" %>
      </div>
    </div>
  </div>
</main>
